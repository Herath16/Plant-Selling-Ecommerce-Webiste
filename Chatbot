  <script>
    const chatWindow = document.getElementById("chat-window");
    const userInput = document.getElementById("user-input");
    const sendBtn = document.getElementById("send-btn");
    const themeBtn = document.getElementById("theme-btn");
    const body = document.body;

    // Get current time for timestamps
    function getTime() {
      const now = new Date();
      return `${now.getHours().toString().padStart(2, '0')}:${now.getMinutes().toString().padStart(2, '0')}`;
    }

    // Add message to chat
    function appendMessage(text, sender) {
      const msgDiv = document.createElement("div");
      msgDiv.classList.add("message", sender);
      
      const msgContent = document.createElement("div");
      msgContent.textContent = text;
      msgDiv.appendChild(msgContent);
      
      const timestamp = document.createElement("span");
      timestamp.classList.add("timestamp");
      timestamp.textContent = getTime();
      msgDiv.appendChild(timestamp);
      
      chatWindow.appendChild(msgDiv);
      chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    // Show typing indicator
    function showTyping() {
      const typingDiv = document.createElement("div");
      typingDiv.classList.add("typing-indicator");
      typingDiv.id = "typing-indicator";
      
      for (let i = 0; i < 3; i++) {
        const dot = document.createElement("div");
        dot.classList.add("typing-dot");
        typingDiv.appendChild(dot);
      }
      
      chatWindow.appendChild(typingDiv);
      chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    // Hide typing indicator
    function hideTyping() {
      const typingIndicator = document.getElementById("typing-indicator");
      if (typingIndicator) {
        typingIndicator.remove();
      }
    }

    // Show quick reply buttons
    function showQuickReplies(replies) {
      const quickRepliesDiv = document.createElement("div");
      quickRepliesDiv.classList.add("quick-replies");
      
      replies.forEach(reply => {
        const button = document.createElement("button");
        button.classList.add("quick-reply-btn");
        button.textContent = reply;
        button.addEventListener("click", () => {
          userInput.value = reply;
          sendMessage();
        });
        quickRepliesDiv.appendChild(button);
      });
      
      chatWindow.appendChild(quickRepliesDiv);
      chatWindow.scrollTop = chatWindow.scrollHeight;
    }

    // Get bot response
    function getBotReply(msg) {
      msg = msg.toLowerCase();
      
      if (msg.includes("hello") || msg.includes("hi") || msg.includes("hey")) {
        return {
          text: "Hello there! 👋 I'm Planty, your plant assistant. How can I help you today?",
          quickReplies: ["Show me plants", "Care tips", "What's on sale?"]
        };
      }
      
      if (msg.includes("plant") || msg.includes("show") || msg.includes("see")) {
        return {
          text: "We have a wonderful selection! 🌿\n\n• Aloe Vera - $15 (great for beginners)\n• Snake Plant - $20 (purifies air)\n• Rose Bush - $25 (beautiful flowers)\n• Fiddle Leaf Fig - $45 (trendy indoor plant)\n\nWhich one interests you?",
          quickReplies: ["Aloe Vera details", "Snake Plant care", "Rose Bush price"]
        };
      }
      
      if (msg.includes("aloe")) {
        return {
          text: "Aloe Vera is $15 🌱\n\n• Loves bright, indirect sunlight\n• Water every 2-3 weeks\n• Great for skin care\n• Pet-friendly (non-toxic)\n\nWould you like to know about care tips or purchase one?",
          quickReplies: ["Care tips for Aloe", "Purchase Aloe Vera"]
        };
      }
      
      if (msg.includes("snake") || msg.includes("sansevieria")) {
        return {
          text: "Snake Plant is $20 🌵\n\n• Thrives in low light\n• Water only when soil is dry\n• Excellent air purifier\n• Very hard to kill (perfect for beginners!)\n\nIt's one of our most popular plants!",
          quickReplies: ["Snake Plant care", "Purchase Snake Plant"]
        };
      }
      
      if (msg.includes("rose")) {
        return {
          text: "Rose Bush is $25 🌹\n\n• Needs 6+ hours of sunlight daily\n• Water 2-3 times per week\n• Beautiful fragrant flowers\n• Perfect for gardens or large pots\n\nAvailable in red, pink, white, and yellow varieties.",
          quickReplies: ["Rose care tips", "Purchase Rose Bush"]
        };
      }
      
      if (msg.includes("care") || msg.includes("tip")) {
        return {
          text: "General Plant Care Tips 💧\n\n1. Most plants prefer indirect sunlight\n2. Overwatering is worse than underwatering\n3. Use pots with drainage holes\n4. Fertilize during growing season (spring/summer)\n5. Dust leaves occasionally for better photosynthesis\n\nAny specific plant you need tips for?",
          quickReplies: ["Aloe care", "Snake plant care", "Rose care"]
        };
      }
      
      if (msg.includes("price") || msg.includes("cost") || msg.includes("how much")) {
        return {
          text: "Our price range:\n\n• Small plants: $10-20\n• Medium plants: $20-40\n• Large plants: $40-60\n• Specialty plants: $60+\n\nWe also have pots, soil, and accessories. Any specific plant you're interested in?",
          quickReplies: ["Aloe Vera price", "Snake Plant price", "Rose Bush price"]
        };
      }
      
      if (msg.includes("thank")) {
        return {
          text: "You're very welcome! 😊 Let me know if you need anything else. Happy planting! 🌿",
          quickReplies: ["See plants again", "Care tips", "Contact support"]
        };
      }
      
      return {
        text: "I'm not sure I understand. I can help with plant information, care tips, prices, or purchases. What would you like to know?",
        quickReplies: ["Show me plants", "Care tips", "What's on sale?"]
      };
    }

    // Send message function
    function sendMessage() {
      const text = userInput.value.trim();
      if (!text) return;
      
      appendMessage(text, "user");
      userInput.value = "";
      
      showTyping();
      
      setTimeout(() => {
        hideTyping();
        const reply = getBotReply(text);
        appendMessage(reply.text, "bot");
        if (reply.quickReplies) {
          showQuickReplies(reply.quickReplies);
        }
      }, 1500);
    }

    // Initial bot message
    setTimeout(() => {
      appendMessage("Hi there! I'm Planty, your personal plant assistant. 🌱 How can I help you today?", "bot");
      showQuickReplies(["Show me plants", "Care tips", "What's on sale?"]);
    }, 500);

    // Event listeners
    sendBtn.addEventListener("click", sendMessage);
    
    userInput.addEventListener("keypress", (e) => {
      if (e.key === "Enter") {
        sendMessage();
      }
    });
    
    themeBtn.addEventListener("click", () => {
      body.classList.toggle("dark-mode");
      themeBtn.textContent = body.classList.contains("dark-mode") ? "☀️" : "🌙";
    });
  </script>
</body>
</html>
